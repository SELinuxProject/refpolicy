# can_setcon(): complete
#
# get mount point is due to libselinux init
#
allow $1 self:process setcurrent;
selinux_get_fs_mount($1)

#
# can_setenforce(): complete
#
# get mount point is due to libselinux init
#
selinux_get_fs_mount($1)
selinux_set_enforce_mode($1)

