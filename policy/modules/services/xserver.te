userdom_read_all_users_state(xdm_t)
userdom_signal_all_users(xdm_t)

sysadm_dontaudit_search_home_dirs(xdm_t)

xserver_rw_session_template(xdm,xdm_t,xdm_tmpfs_t)
xserver_unconfined(xdm_t)

